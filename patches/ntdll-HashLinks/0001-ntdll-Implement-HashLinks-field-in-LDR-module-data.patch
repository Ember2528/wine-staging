     int argc;
@@ -4029,6 +4103,7 @@ START_TEST(loader)
     test_InMemoryOrderModuleList();
     test_LoadPackagedLibrary();
     test_wow64_redirection();
+    test_HashLinks();
     test_dll_file( "ntdll.dll", FALSE );
     test_dll_file( "kernel32.dll", TRUE );
     test_dll_file( "advapi32.dll", TRUE );
